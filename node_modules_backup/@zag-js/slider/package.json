{
  "name": "@zag-js/slider",
  "version": "0.9.2",
  "description": "Core logic for the slider widget implemented as a state machine",
  "keywords": [
    "js",
    "machine",
    "xstate",
    "statechart",
    "component",
    "chakra-ui",
    "slider"
  ],
  "author": "Segun Adebayo <sage@adebayosegun.com>",
  "homepage": "https://github.com/chakra-ui/zag#readme",
  "license": "MIT",
  "repository": "https://github.com/chakra-ui/zag/tree/main/packages/slider",
  "sideEffects": false,
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/chakra-ui/zag/issues"
  },
  "dependencies": {
    "@zag-js/anatomy": "0.9.2",
    "@zag-js/core": "0.9.2",
    "@zag-js/dom-query": "0.9.2",
    "@zag-js/dom-event": "0.9.2",
    "@zag-js/form-utils": "0.9.2",
    "@zag-js/utils": "0.9.2",
    "@zag-js/element-size": "0.9.2",
    "@zag-js/numeric-range": "0.9.2",
    "@zag-js/types": "0.9.2"
  },
  "devDependencies": {
    "clean-package": "2.2.0"
  },
  "clean-package": "../../../clean-package.config.json",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build-fast": "tsup src",
    "start": "pnpm build --watch",
    "build": "tsup src --dts",
    "test": "jest --config ../../../jest.config.js --rootDir . --passWithNoTests",
    "lint": "eslint src --ext .ts,.tsx",
    "test-ci": "pnpm test --ci --runInBand",
    "test-watch": "pnpm test --watch -u",
    "typecheck": "tsc --noEmit"
  }
}